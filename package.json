		"@rbxts/types": "^1.0.881",
		"roblox-ts": "^3.0.0",
		"typescript": ">=4.0.0"
	},
	"devDependencies": {
		"@rbxts/react": "^17.2.3",
		"@rbxts/types": "^1.0.881",
